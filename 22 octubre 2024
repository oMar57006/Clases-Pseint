Algoritmo sin_titulo
	Definir i Como Entero;
	Para i=0 Hasta 5 Con Paso 1 Hacer
		Escribir "Ciclo para -> ",i;
	FinPara
	
	i=0
	Mientras i<=5 Hacer
		Escribir "Ciclo mientras-> ", i;
		i=i+1;
	FinMientras
FinAlgoritmo

//
	Repetir
		Escribir "Ciclo repetir -> ",i;
		i=i+1;
	Mientras Que i<=5
//

Algoritmo SumarCicloPara
	Definir i, contador como entero
	contador<-0;
	Para i<-1 Hasta 100 Con Paso 1 Hacer
		Si i mod 2=0 Entonces
			contador <- contador+1;
		FinSi
	FinPara
	Escribir "Cantidad de números pares encontrados ", contador;
FinAlgoritmo

//

Algoritmo SumarCicloMientras
	Definir i, contador como entero
	contador=0;
	i=1;
	Mientras (i<=100) Hacer
		si i mod 2=0 Entonces
			contador=contador+1; 
		FinSi
		i=i+1;
	FinMientras
	Escribir "cantidad de números pares encontrados ",contador;
FinAlgoritmo

//

Algoritmo SumarCicloRepetir
	Definir i, contador como entero
	contador=0;
	i=1;
	Repetir 
		si i mod 2=0 Entonces
			Escribir i; 
		FinSi
		i=i+1;
	Mientras que (i<=100)
	Escribir "cantidad de números pares encontrados ",contador;
FinAlgoritmo
